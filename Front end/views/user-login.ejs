<%- include('header') -%>

<div class="wrapper">
    <div class="title-text">
      <div class="title login">Login Form</div>
    </div>
    <div class="form-container">
      <div class="form-inner">
        <form action="/login-submit" class="login" method="post">
          <h4  id="msg" class="message text-success"><%= msg %></h4>
          <div class="field">
            <input type="text" placeholder="Email Address" name="email" required>
          </div>
          <div class="field">
            <input type="password" placeholder="Password" name="password" required minlength="6">
          </div>
          <div class="pass-link"><a href="/forgotPassword">Forgot password?</a></div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Login">
          </div>
          <div class="signup-link">Not a member? <a href="/signupPage">Signup now</a></div>
        </form>  
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded',function(){
      setTimeout(()=>{
          let msg = document.getElementById('msg')
          msg.textContent = ''
      },3000)
      console.log(msg,"msg")
    })
  </script>
  <%-include('footer')-%>