async function findTotalPrice() {
    var finalPrice = [];
    const rooms = document.querySelectorAll('.roomsss');
    const roomTable = document.getElementById('roomTable');
    var numRooms = document.getElementById('num_rooms').value;

    for (const room of rooms) {
        const roomId = room.dataset.roomid;
        const capacity = room.dataset.capacity;
        const price = room.dataset.price;
        const index = room.dataset.index;

        const totalPrice = price * numRooms;
        finalPrice.push(totalPrice);

        var totalRoomPrice = document.getElementById(`totalRoomPrice${index}`);
        totalRoomPrice.textContent = totalPrice;

        try {
            const response = await fetch('/verifyRoomAvailability', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ numRooms: numRooms, roomId: roomId })
            });

            const data = await response.json();

            if (data.success === "ok") {
                var button = document.getElementById(`room${index}`);
                button.textContent = "Select Room";
                button.disabled = false;
                button.style.backgroundColor = '';
                button.style.color = '';
                button.style.filter = '';
            } else {
                var button = document.getElementById(`room${index}`);
                button.textContent = "Sold Out";
                button.disabled = true;
                button.style.backgroundColor = '#cccccc';
                button.style.color = '#000';
                button.style.filter = 'blur(2px)';
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
}

   
