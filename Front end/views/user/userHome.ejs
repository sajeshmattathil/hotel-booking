                      <option value="">2</option>
                      <option value="">3</option>
                      <option value="">4+</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-1 mb-md-0">
                  <label for="children" class="font-weight-bold text-dark">Children</label>
                  <div class="field-icon-wrap">
                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                    <select name="children" id="children" class="form-control">
                      <option value="">1</option>
                      <option value="">2</option>
                      <option value="">3</option>
                      <option value="">4+</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <button class="btn btn-primary btn-block text-white mt-3" style="background-color: #003b95;">Check Availability</button>
                </div>
              </form>
            </div>
          </div>
       </div>
    </section>
       

