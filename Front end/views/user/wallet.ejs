           else currentPage = 1;

          console.log(url.get('page'))
          let totalpage 
         
          const prevBtn = document.getElementById('prev');
          const nextBtn = document.getElementById('nextPage');
        let page_num = document.getElementById('page-num')

          prevBtn.addEventListener('click', function () {
