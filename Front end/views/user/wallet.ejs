            if (currentPage > 1) {
              currentPage--;
              console.log(currentPage, "****")
              updatePage(currentPage);
            }
          });

          nextBtn.addEventListener('click', function () {
            console.log(currentPage, "nextBtn")
           if(currentPage<pageCount) currentPage++;
            console.log(currentPage, "/////")

            updatePage(Number(currentPage));

