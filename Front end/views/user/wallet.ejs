<style>
    /* Add this CSS to your existing styles or in a separate styles.css file */

.wallet-container {
    margin-top: 50px;
}

.wallet-card {
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.wallet-card-header {
    background-color: #007bff;
    color: #fff;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 10px 10px 0 0;
}

.wallet-card-body {
    margin-top: 20px;
}

.wallet-balance {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.add-money-button {
    background-color: #007bff;
    border: none;
    color: #fff;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 5px;
    cursor: pointer;
}

.add-money-button:hover {
    background-color: #0056b3;
}

</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Wallet Information
                </div>
                <div class="card-body">
                    <p class="text-dark">Your current wallet balance is: <%= wallet.wallet || 0 %></p>
                    <button class="btn btn-primary">Add Money to Wallet</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
      <h4 class="card-title">Wallet transactions</h4>
      <h1  class="text-success"><%= msg %></h1>
      <table class="table table-striped">
        <thead>
          <tr>
            
            <th>Sl No.</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Date</th>
            <th> </th>
            <th> </th>
           
          </tr>
        </thead>
        <tbody>   
            <% if(transactions.length) { %>      
          <% transactions.forEach((data,index) => { %>   
          <tr>
              <td><%= index+1 %></td>
              <td>â‚¹<%= data.amount %></td>
              <% if(data.transaction_type === "credit") { %>  
                <td class="text-success"><%= data.transaction_type %></td>
              <% } %> 
              <% if(data.transaction_type === "debit") { %>  
                <td class="text-danger"><%= data.transaction_type %></td>
              <% } %> 
              <td><%= data.date %></td>
          </tr>

          <% }) %>   
          <% } %>             
        </tbody>
      </table>
    </div>
  </div>



