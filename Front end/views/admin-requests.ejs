              <script>

                document.addEventListener('DOMContentLoaded',()=>{
                  // let owner = document.querySelectorAll('.ownerId')
                  // console.log(owner[0].dataset.id)
                    const block = document.getElementById('block')
                    const unblock = document.getElementById('unblock')

                    // const owner_id =block.value
                    // console.log(owner_id,"owner_id")

                    block.addEventListener('click',()=>{
                          const id = document.getElementById('ownerId').value
                          console.log(id,"id")
                            fetch('/admin/change_owner_status',{
                              method:'POST',
                              headers:{
                                'content-type': 'application/json',

                              },
                              body:JSON.stringify({status:false,ownerId:id
                                })

                            }).then((response)=>response.json())
                            .then((data)=>{
                              const status = document.getElementById('status')
                              status.textContent = 'Blocked'
                            }).catch((error)=>console.log(error))
                    })
                })

                unblock.addEventListener('click',()=>{
                          const id = document.getElementById('ownerId').value
                          console.log(id,"id")
                            fetch('/admin/change_owner_status',{
                              method:'POST',
                              headers:{
                                'content-type': 'application/json',

                              },
                              body:JSON.stringify({status:true,ownerId:id
                                })

                            }).then((response)=>response.json())
                            .then((data)=>{
                              const status = document.getElementById('status')
                              status.textContent = 'Active'
                            }).catch((error)=>console.log(error))
                    })
              
              </script>

